<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Communication_Requires_Related_Record</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISBLANK(Related_Incident__c),
    ISBLANK(Related_Measure__c),
    ISBLANK(Related_Supplier__c)
)</errorConditionFormula>
    <errorMessage>At least one of Related Incident, Related Measure, or Related Supplier is required.</errorMessage>
</ValidationRule>
