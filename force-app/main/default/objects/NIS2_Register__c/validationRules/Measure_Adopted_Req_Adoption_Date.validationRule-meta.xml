<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Measure_Adopted_Req_Adoption_Date</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
      RecordType.DeveloperName = &quot;Measure&quot;,
      ISPICKVAL(Adoption_Status__c, &quot;Adopted&quot;),
      ISBLANK(Adoption_Date__c)
    )</errorConditionFormula>
    <errorMessage>When Adoption Status is &quot;Adopted&quot;, Adoption Date is required.</errorMessage>
</ValidationRule>
