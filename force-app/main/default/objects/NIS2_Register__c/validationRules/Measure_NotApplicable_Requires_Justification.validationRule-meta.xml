<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Meas_NotApplicable_Req_Justification</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Adoption_Status__c, "NotApplicable"),
    ISBLANK(NotAdopted_Justification__c)
)</errorConditionFormula>
    <errorMessage>When Adoption Status is "NotApplicable", Not Adopted Justification is required.</errorMessage>
</ValidationRule>
